
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<div class="signinform">
    <h1>Service Login Form</h1>
    <!-- container -->
    <div class="container">
        <!-- main content -->
        <div class="w3l-form-info">
            <div class="w3_info">
                <h2>Login</h2>
                @using (Html.BeginForm("Verify", "Account", FormMethod.Post))
                {
                    <div class="input-group">
                        <span><i class="fas fa-user" aria-hidden="true"></i></span>
                        @Html.TextBox("UserName", null, new { placeholder = "Username or Email", required = "required" })
                    </div>
                    <div class="input-group">
                        <span><i class="fas fa-key" aria-hidden="true"></i></span>
                        @Html.Password("Password", null, new { placeholder = "Password", required = "required" })
                    </div>
                    <div class="form-row bottom">
                        <div class="form-check">
                            @Html.CheckBox("Remember", new { id = "remember" })
                            @Html.Label("Remember me?", new { @for = "remember" })
                        </div>
                        <a href="#url" class="forgot">Forgot password?</a>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Login</button>
                }
                <p class="continue"><span>or Login with</span></p>
                <div class="social-login">
                    <a href="#facebook">
                        <div class="facebook">
                            <span class="fab fa-facebook-f" aria-hidden="true"></span>
                        </div>
                    </a>
                    <a href="#twitter">
                        <div class="twitter">
                            <span class="fab fa-twitter" aria-hidden="true"></span>
                        </div>
                    </a>
                    <a href="#google">
                        <div class="google">
                            <span class="fab fa-google" aria-hidden="true"></span>
                        </div>
                    </a>
                </div>
                <p class="account">Don't have an account? <a href="#signup">Sign up</a></p>
            </div>
        </div>
        <!-- //main content -->
    </div>
    <!-- //container -->
    <!-- footer -->
    <div class="footer">
        <p>
            &copy; @DateTime.Now.Year Service login form. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="blank">W3layouts</a>
        </p>
    </div>
    <!-- footer -->
</div>
